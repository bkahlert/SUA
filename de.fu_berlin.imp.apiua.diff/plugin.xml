<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.fu_berlin.imp.apiua.diff.filefilter" name="FileFilter" schema="schema/de.fu_berlin.imp.apiua.diff.filefilter.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="de.fu_berlin.imp.apiua.category"
            class="de.fu_berlin.imp.apiua.diff.views.DiffView"
            icon="icons/view16/diff_misc.png"
            id="de.fu_berlin.imp.apiua.diff.views.DiffView"
            name="Diff Explorer"
            restorable="true">
      </view>
      <view
            category="de.fu_berlin.imp.apiua.category"
            class="de.fu_berlin.imp.apiua.diff.views.CompilerOutputView"
            icon="icons/view16/compileroutput_misc.png"
            id="de.fu_berlin.imp.apiua.diff.views.CompilerOutputView"
            name="Compiler Output"
            restorable="true">
      </view>
      <view
            category="de.fu_berlin.imp.apiua.category"
            class="de.fu_berlin.imp.apiua.diff.views.ExecutionOutputView"
            icon="icons/view16/compileroutput_misc.png"
            id="de.fu_berlin.imp.apiua.diff.views.ExecutionOutputView"
            name="Execution Output"
            restorable="true">
      </view>
      <view
            category="de.fu_berlin.imp.apiua.category"
            class="de.fu_berlin.imp.apiua.diff.views.EditorOnlyCompilerOutputView"
            icon="icons/view16/compileroutput_misc.png"
            id="de.fu_berlin.imp.apiua.diff.views.EditorOnlyCompilerOutputView"
            name="Compiler Output (Editor Only)"
            restorable="true">
      </view>
      <view
            category="de.fu_berlin.imp.apiua.category"
            class="de.fu_berlin.imp.apiua.diff.views.EditorOnlyExecutionOutputView"
            icon="icons/view16/compileroutput_misc.png"
            id="de.fu_berlin.imp.apiua.diff.views.EditorOnlyExecutionOutputView"
            name="Execution Output (Editor Only)"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.fu_berlin.imp.apiua.diff.preferences.SUADiffPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.fu_berlin.imp.apiua.core.preferences.SUACorePreferences"
            class="de.fu_berlin.imp.apiua.diff.preferences.SUADiffPreferencePage"
            id="de.fu_berlin.imp.apiua.diff.preferences.SUADiffPreferencePage"
            name="Diffs">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.fu_berlin.imp.apiua.diff.setCompilationState"
            name="Set Compilation State">
         <commandParameter
               id="de.fu_berlin.imp.apiua.diff.setCompilationState.compiles"
               name="Compiles"
               optional="true"
               values="de.fu_berlin.imp.apiua.core.commands.BooleanValues">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.fu_berlin.imp.apiua.diff.handlers.SetCompilationStateHandler"
            commandId="de.fu_berlin.imp.apiua.diff.setCompilationState">
         <activeWhen>
            <reference
                  definitionId="de.fu_berlin.imp.apiua.diff.consistsOfICompilable">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <separator
               name="de.fu_berlin.imp.apiua.diff.separator1"
               visible="true">
         </separator>
         <menu
               icon="icons/elcl16/set_compilation_state_tsk.png"
               label="Set Compilation State">
            <separator
                  name="de.fu_berlin.imp.apiua.diff.separator1"
                  visible="true">
            </separator>
            <dynamic
                  class="de.fu_berlin.imp.apiua.diff.handlers.SetCompilationStateContributionItem"
                  id="de.fu_berlin.imp.apiua.diff.SetCompilationStateContributionItem">
            </dynamic>
            <separator
                  name="de.fu_berlin.imp.apiua.diff.separator1"
                  visible="true">
            </separator>
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="de.fu_berlin.imp.apiua.diff.containsICompilable">
               </reference>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.fu_berlin.imp.apiua.diff.views.CompilerOutputView?after=additions">
         <command
               commandId="com.bkahlert.devel.nebula.toggleSourceMode"
               style="toggle">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.fu_berlin.imp.apiua.diff.views.ExecutionOutputView?after=additions">
         <command
               commandId="com.bkahlert.devel.nebula.toggleSourceMode"
               style="toggle">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="de.fu_berlin.imp.apiua.diff.containsICompilable">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <adapt
                     type="de.fu_berlin.imp.apiua.diff.model.ICompilable">
               </adapt>
            </iterate>
         </with>
      </definition>
      <definition
            id="de.fu_berlin.imp.apiua.diff.consistsOfICompilable">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <adapt
                     type="de.fu_berlin.imp.apiua.diff.model.ICompilable">
               </adapt>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="de.fu_berlin.imp.apiua.diff.services.impl.CompilationServiceFactory">
         <service
               serviceClass="de.fu_berlin.imp.apiua.diff.services.ICompilationService">
         </service>
      </serviceFactory>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.jface.text.ITextSelection"
            class="de.fu_berlin.imp.apiua.diff.model.impl.TextSelectionAdapterFactory">
         <adapter
               type="de.fu_berlin.imp.apiua.core.model.ILocatable">
         </adapter>
         <adapter
               type="de.fu_berlin.imp.apiua.diff.model.impl.DiffRecordSegment">
         </adapter>
         <adapter
               type="de.fu_berlin.imp.apiua.diff.model.ICompilable">
         </adapter>
      </factory>
   </extension>
   <extension
         point="de.fu_berlin.imp.apiua.core.daterange">
      <DateRangeListenerFactory
            class="de.fu_berlin.imp.apiua.diff.views.DiffView$Factory">
      </DateRangeListenerFactory>
   </extension>
   <extension
         point="de.fu_berlin.imp.apiua.core.dataload">
      <DataLoadProvider
            class="de.fu_berlin.imp.apiua.diff.model.DiffLoader"
            source="de.fu_berlin.imp.apiua.diff.model.IDiffLoadDependency">
      </DataLoadProvider>
   </extension>
   <extension
         point="de.fu_berlin.imp.apiua.diff.filefilter">
      <FileFilterListenerFactory
            class="de.fu_berlin.imp.apiua.diff.views.DiffView$Factory">
      </FileFilterListenerFactory>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.fu_berlin.imp.apiua.diff.commands.AddCodeInstanceHandler"
            commandId="de.fu_berlin.imp.apiua.code.commands.addCodeInstance">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="org.eclipse.compare.CompareEditor">
               </equals>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="de.fu_berlin.imp.apiua.core.locatorprovider">
      <LocatorProviderFactory
            class="de.fu_berlin.imp.apiua.diff.gt.DiffLocatorProviderFactory">
      </LocatorProviderFactory>
   </extension>
   <extension
         point="de.fu_berlin.imp.apiua.timeline">
      <TimelineBandProvider
            class="de.fu_berlin.imp.apiua.diff.timeline.DiffTimelineBandProvider">
      </TimelineBandProvider>
   </extension>

</plugin>
