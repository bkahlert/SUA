<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.fu_berlin.imp.seqan.usability_analyzer.core.daterange" name="Date Range" schema="schema/de.fu_berlin.imp.seqan.usability_analyzer.core.daterange.exsd"/>
   <extension-point id="de.fu_berlin.imp.seqan.usability_analyzer.core.dataload" name="Data Load" schema="schema/de.fu_berlin.imp.seqan.usability_analyzer.core.dataload.exsd"/>
   <extension point="org.eclipse.ui.views">
      <category id="de.fu_berlin.imp.seqan.usability_analyzer.category" name="Usability Analysis">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="de.fu_berlin.imp.seqan.usability_analyzer.core.preferences.SUACorePreferences"
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.preferences.SUACorePreferences"
            name="Seqan Usability Analyzer">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.fu_berlin.imp.seqan.usability_analyzer.core.preferences.SUACorePreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="de.fu_berlin.imp.seqan.usability_analyzer.category"
            class="de.fu_berlin.imp.seqan.usability_analyzer.core.views.TimeZoneDateRangeView"
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.views.TimeZoneDateRangeView"
            name="Date &amp; Time Range"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="de.fu_berlin.imp.seqan.usability_analyzer.core.services.impl.ServiceFactory">
         <service
               serviceClass="de.fu_berlin.imp.seqan.usability_analyzer.core.services.IWorkSessionService"></service>
         <service
               serviceClass="de.fu_berlin.imp.seqan.usability_analyzer.core.services.IDataService">
         </service>
      </serviceFactory>
   </extension>
<extension
         point="org.eclipse.ui.commands">
      <command
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.startWorkSession"
            name="Start Work Session">
      </command>
      <command
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.rename"
            name="Rename...">
      </command>
      <command
            description="Change the data directories that are available."
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.ChangeDataDirectories"
            name="Add/Remove Data Directories">
      </command>
      <command
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.revealInOS"
            name="Show In Finder">
      </command>
   </extension>
     <extension
           point="org.eclipse.ui.handlers">
        <handler
              class="de.fu_berlin.imp.seqan.usability_analyzer.core.handlers.StartWorkSessionHandler"
              commandId="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.startWorkSession">
           <activeWhen>
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="de.fu_berlin.imp.seqan.usability_analyzer.core.services.IWorkSessionEntity">
                    </adapt>
                 </iterate>
              </with>
           </activeWhen>
        </handler>
        <handler
              class="de.fu_berlin.imp.seqan.usability_analyzer.core.handlers.ChangeDataDirectories"
              commandId="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.ChangeDataDirectories">
        </handler>
        <handler
              class="de.fu_berlin.imp.seqan.usability_analyzer.core.handlers.RevealInOSHandler"
              commandId="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.revealInOS">
           <activeWhen>
              <reference
                    definitionId="de.fu_berlin.imp.seqan.usability_analyzer.core.consistsOfIRevealableInOS">
              </reference>
           </activeWhen>
        </handler>
     </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <separator
               name="de.fu_berlin.imp.seqan.usability_analyzer.core.separator1"
               visible="true">
         </separator>
         <command
               commandId="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.startWorkSession"
               disabledIcon="icons/dtool16/worksession_start_tsk.png"
               icon="icons/etool16/worksession_start_tsk.png"
               style="push"
               tooltip="Stop the existing work session and starts a new one">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <reference
                        definitionId="de.fu_berlin.imp.seqan.usability_analyzer.core.hasMultipleIWorkSessionEntities">
                  </reference>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.rename"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="de.fu_berlin.imp.seqan.usability_analyzer.core.commands.revealInOS"
               disabledIcon="icons/dtool16/reveal_in_os_tsk.png"
               icon="icons/etool16/reveal_in_os_tsk.png"
               style="push"
               tooltip="Open the selected file in Finder">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="de.fu_berlin.imp.seqan.usability_analyzer.core.containsIRevealableInOS">
               </reference>
            </visibleWhen>
         </command>
         
         <separator
               name="de.fu_berlin.imp.seqan.usability_analyzer.core.separator1"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.definitions.singleSelection">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.definitions.multipleSelections">
         <with
               variable="selection">
            <and>
               <not>
                  <count
                        value="0">
                  </count>
               </not>
               <not>
                  <count
                        value="1">
                  </count>
               </not>
            </and>
         </with>
      </definition>
      <definition
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.hasMultipleIWorkSessionEntities">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <adapt
                     type="de.fu_berlin.imp.seqan.usability_analyzer.core.services.IWorkSessionEntity">
               </adapt>
            </iterate>
         </with>
      </definition>
      <definition
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.consistsOfIRevealableInOS">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <adapt
                     type="de.fu_berlin.imp.seqan.usability_analyzer.core.model.IRevealableInOS">
               </adapt>
            </iterate>
         </with>
      </definition>
      <definition
            id="de.fu_berlin.imp.seqan.usability_analyzer.core.containsIRevealableInOS">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <adapt
                     type="de.fu_berlin.imp.seqan.usability_analyzer.core.model.IRevealableInOS">
               </adapt>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <scheme
            id="de.fu_berlin.imp.seqan.usability_analyzer.scheme"
            name="SeqAn Usability Analyzer">
      </scheme>
      <key
            commandId="org.eclipse.ui.edit.rename"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="de.fu_berlin.imp.seqan.usability_analyzer.scheme"
            sequence="F2">
      </key>
      <key
            commandId="org.eclipse.ui.edit.delete"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="de.fu_berlin.imp.seqan.usability_analyzer.scheme"
            sequence="Delete">
      </key>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="de.fu_berlin.imp.seqan.usability_analyzer.core.model.data.IData"
            class="de.fu_berlin.imp.seqan.usability_analyzer.core.model.data.impl.DataAdapterFactory">
         <adapter
               type="de.fu_berlin.imp.seqan.usability_analyzer.core.model.IRevealableInOS">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.fu_berlin.imp.seqan.usability_analyzer.core.Startup">
      </startup>
   </extension>
</plugin>
